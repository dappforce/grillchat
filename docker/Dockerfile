ARG GH_NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN
ARG GH_NEXT_PUBLIC_FIREBASE_PROJECT_ID
ARG GH_NEXT_PUBLIC_FIREBASE_API_KEY
ARG GH_NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET
ARG GH_NEXT_PUBLIC_FIREBASE_MESSAGING_ID
