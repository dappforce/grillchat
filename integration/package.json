  },
  "keywords": [
    "Grill.chat",
    "Subsocial",
    "chat"
  ],
  "devDependencies": {
    "@subsocial/resource-discussions": "^0.0.3",
    "@swc/core": "^1.3.55",
    "@testing-library/jest-dom": "^5.16.5",
    "@types/jest": "^26.0.20",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jsdom": "^22.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tsup": "^6.7.0"
  }
}
